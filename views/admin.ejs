<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>Login</title>
    <link rel="stylesheet" href="../static/css/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <h1>Users info:</h1>
        <table class="table">
        <thead>
            <tr>
                <th scope="col"><a href="/editInfo/first-name">First_name</a></th>
                <th scope="col"><a href="/editInfo/last-name">Last_name</a></th>
                <th scope="col"><a href="/editInfo/barcode">Barcode</a></th>
                <th scope="col" style="width: 100px">Delete</th>
                <th scope="col" style="width: 100px">Edit</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.first_name; %></td>
                    <td><%= user.last_name; %></td>
                    <td><%= user.barcode; %></td>
                    <% if (user.barcode == current_user.barcode) {%>
                    <td></td>
                    <% } else { %>
                    <td><a href="/delete_user/<%= user.barcode%>">Delete</a></td>
                    <% } %>
                        <td><a href="/edit_user/<%= user.barcode%>">Edit</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a class="btn btn-primary" href="/add_new_user/" role="button">Add User</a>

</body>
</html>